<% include partials/header.ejs%>

<h1><%= title %></h1>

<!-- edit order form -->
<form method="post">
    <div>
        <label for="firstName">Customer First Name:</label>
        <input name="firstName" id="firstName" required value="<%= order.firstName %>" />
    </div>

    <div>
        <label for="lastName">Customer Last Name: </label>
        <input name="lastName" id="lastName" required value="<%= order.lastName %>" />
    </div>

    <div>
        <label for="address">Shipping Address: </label>
        <input name="address" id="address" required value="<%= order.address %>" />
    </div>

    <div>
        <lable for="paymentType">Payment Method: </lable>
        <select name="paymentType" id="paymentType" required >
            <%
            //set array of payment types, loop through as user options and selects current order option
            var types = ['Cash', 'Interact Debt', 'MasterCard', 'Visa'];
            var selected= '';

            for(var i=0; i<types.length; i++){
                if(types[i] == order.paymentType){
                    selected = ' selected';
                }else{
                    selected = '';
                }
            %>
                <option<%= selected %>>
                    <%= types[i] %>
                </option>
             <% } %>
        </select>
    </div>

    <h2>Order Details</h2>

    <div>
        <lable for="orderDetail">Item: </lable>
        <select name="orderItem" id="orderItem" required>
            <%
            //set array of items, loop through as user options and selects current order option
            var types = ['Knitted Adult Hat', 'Knitted Child Hat', 'Knitted Scarf'];
            var selected= '';
            for(var i=0; i<types.length; i++){
                if(types[i] == order.orderItem){
                    selected = ' selected';
                }else{
                    selected = '';
                }
            %>
                <option<%= selected %>>
                    <%= types[i] %>
                </option>
            <% } %>
        </select>
    </div>

    <div>
        <lable for="orderColour">Colour:</lable>
        <select name="orderColour" id="orderColour" required>
            <%
            //set array of colours, loop through as user options and selects current order option
            var types = ['White', 'Black', 'Brown', 'Grey', 'Orange', 'Navy'];
            for(var i=0; i<types.length; i++){
                if(types[i] == order.orderColour){
                    selected = ' selected';
                }else{
                    selected = '';
                }
            %>

                <option<%= selected %>>
                    <%= types[i] %>
                </option>
            <% } %>
        </select>
    </div>

    <div>
        <lable for="orderUnit">Quantity: </lable>
        <select name="orderUnit" id="orderUnit" required>
            <%
            //set array of amount quantity, loop through as user options and selects current order option
            var types = [ 1, 2, 3, 4, 5];
            var selected= '';
            for(var i=0; i<types.length; i++){
                if(types[i] == order.orderUnit){
                    selected = ' selected';
                }else{
                    selected = '';
                }
            %>

                <option<%= selected %>>
                    <%= types[i] %>
                </option>
            <% } %>
        </select>
    </div>

    <div>
        <lable for="orderAddon">Finish: </lable>
        <select name="orderAddon" id="orderAddon">
            <%
            //set array of addons, loop through as user options and selects current order option
            var types = ['None', 'Beaver Fur Pom Pom', 'Raccoon Fur Pom Pom', 'Coyote Fur Pom Pom', 'White Fox Fur Pom Pom', 'Red Fox Fur Pom Pom'];
            var selected= '';
            for(var i=0; i<types.length; i++){
                if(types[i] == order.orderAddon){
                    selected = ' selected';
                }else{
                    selected = '';
                }
            %>

                <option<%= selected %>>
                    <%= types[i] %>
                </option>
            <% } %>
        </select>
    </div>

    <div>
        <lable for="orderComment">Order Comments: </lable>
        <input name="orderComment" id="orderComment" value="<%= order.orderComment %>" />
    </div>

    <button>Save</button>
</form>

<% include partials/footer.ejs%>